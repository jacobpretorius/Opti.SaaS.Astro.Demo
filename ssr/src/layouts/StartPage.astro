---
import type { StartPage, ArticlePage as ArticlePageType } from '../gql/graphql';
import Card from '../components/Card.astro';

interface Props {
  pageContent: StartPage;
  articles?: ArticlePageType[];
}

const { pageContent, articles } = Astro.props;
const logoUrl = pageContent.Logo?.url?.default;
const recentArticles = articles?.slice(0, 3);
---

<Fragment>
  <section class='container mx-auto py-8 text-center'>
    {logoUrl && <img src={logoUrl} alt={`${pageContent.CompanyName ?? 'Company'} Logo`} class='mx-auto mb-6 h-16 md:h-20 w-auto' />}
    <h1 class='text-4xl md:text-5xl lg:text-6xl font-bold mb-4' data-epi-edit='Heading'>
      üßë‚ÄçüöÄ {pageContent.Heading}
    </h1>
    {pageContent.Body?.html && <div class='prose prose-xl mx-auto max-w-3xl' data-epi-edit='Body' set:html={pageContent.Body.html} />}
  </section>

  {
    pageContent.BannerImages && pageContent.BannerImages.length > 0 && (
      <div class='hero-container' data-epi-edit='BannerImages'>
        {pageContent.BannerImages.map((item) => {
          const imageUrl = item?._metadata?.url?.default;
          return imageUrl ? <img src={imageUrl} alt='Banner Image' class='hero-image' /> : null;
        })}
      </div>
    )
  }

  {
    recentArticles && recentArticles.length > 0 && (
      <section class='py-12 md:py-16 bg-gray-50 dark:bg-gray-800'>
        <div class='container mx-auto px-4'>
          <h2 class='text-3xl font-bold text-center mb-10 dark:text-white'>Recent Articles</h2>
          <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
            {recentArticles.map(
              (article) =>
                article && (
                  <Card
                    title={article.Heading!}
                    href={article._metadata?.url?.default ?? '#'}
                    imageUrl={article.Image?.url?.default}
                    imageAlt={article.Heading ?? undefined}
                    date={article._metadata?.published}
                    excerpt={article.MetaDescription}
                  />
                ),
            )}
          </div>
        </div>
      </section>
    )
  }
</Fragment>

<style>
  .hero-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    overflow: hidden;
    padding: 1em 0;
  }
  .hero-container img.hero-image {
    border-radius: 10px;
    width: calc((100% - (4 * 1em)) / 4);
    margin: 1em;
    flex: 1;
    object-fit: cover;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .articles {
    margin-top: 1em;
  }
  .articles ul {
    gap: 2rem;
    list-style-type: decimal-leading-zero;
    margin: 0;
    padding: 0;
  }
  .articles ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  .articles ul li a {
    display: block;
  }
</style>

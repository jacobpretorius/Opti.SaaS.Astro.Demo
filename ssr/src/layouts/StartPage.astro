---
import type { StartPage, ArticlePage as ArticlePageType } from '../gql/graphql';
import { Image } from 'astro:assets';
import { ClientRouter } from 'astro:transitions';
// Card component is no longer used here directly for recent articles
// import Card from '../components/Card.astro';

interface Props {
  pageContent: StartPage;
  articles?: ArticlePageType[];
}

const { pageContent, articles } = Astro.props;
// logoUrl and recentArticles are no longer used directly here in the same way.
---

<ClientRouter />

<h1 data-epi-edit='Heading'>üßë‚ÄçüöÄ {pageContent.Heading}</h1>

{pageContent.Body?.html && <div data-epi-edit='Body' set:html={pageContent.Body.html} />}

{
  pageContent.BannerImages && pageContent.BannerImages.length > 0 && (
    <div class='hero-container' data-epi-edit='BannerImages'>
      {pageContent.BannerImages.map((item) => {
        const imageUrl = item?._metadata?.url?.default; // Ensure we handle potential nulls
        return imageUrl ? <Image src={imageUrl} alt='' inferSize={true} /> : null; // Match static site <Image>
      })}
    </div>
  )
}

{
  articles && articles.length > 0 && (
    <div class='articles'>
      {' '}
      {/* Changed from section to div, class='articles' */}
      <h2>Recent writing</h2> {/* Simplified h2 */}
      <ul>
        {articles.map(
          (article) =>
            article &&
            article.Heading &&
            article._metadata?.url?.default && (
              <li>
                <a href={article._metadata.url.default}>
                  <h5 class='title'>{article.Heading}</h5> {/* Match static site structure */}
                </a>
              </li>
            ),
        )}
      </ul>
    </div>
  )
}

<style>
  /* .logo styles will be removed */

  .hero-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    overflow: hidden;
    /* padding: 1em 0; will be removed */
  }
  .hero-container img {
    /* Changed from img.hero-image */
    border-radius: 10px;
    width: calc((100% - (4 * 1em)) / 4);
    margin: 1em;
    flex: 1;
    object-fit: cover;
    /* box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); will be removed */
  }

  /* .articles-section and related styles will be removed or replaced by .articles */

  /* ul.article-list and related styles will be removed */

  /* Keep .articles for potential future use if structure changes, but not directly used now */
  .articles {
    margin-top: 1em;
  }
  .articles ul {
    gap: 2rem;
    list-style-type: decimal-leading-zero; /* No longer default for article-list */
    margin: 0;
    padding: 0;
  }
  .articles ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  .articles ul li a {
    display: block;
  }
</style>
